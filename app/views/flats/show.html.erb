  <div class="container">
    <h1><%= @flat.name %></h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="card mb-3 shadow p-3">
          <h4><%= @flat.address %></h4>
          <p><%= @flat.description %></p>
        </div>
        <div class="card mb-3 shadow p-3">
          <h4>Further Information</h4>
          <p><i class="fas fa-users"></i><%= @flat.number_of_guests %></p>
          <p><i class="fas fa-dollar-sign"></i><%= @flat.price_per_night %></p>
        </div>
      </div>
      <div class="col-4">
        <%# <%= simple_form_for() do |f| %>
